@model BibliotecaWeb.Models.Statistici.CititoriPerioadaModel

@{
    ViewData["Title"] = "CititoriPerioada";
}

<h2>CititoriPerioada</h2>

<h4>CititoriPerioadaModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CititoriPerioada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="startTime" class="control-label"></label>
                <input asp-for="startTime" class="form-control" />
                <span asp-validation-for="startTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endTime" class="control-label"></label>
                <input asp-for="endTime" class="form-control" />
                <span asp-validation-for="endTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
           @if (Model.cititori.Count() > 0)
            {
                <div>
                    @Model.cititori.Count() Cititori
                </div>
                <ul>
                    @foreach (var cititor in Model.cititori)
                    {
                        <li> @cititor.Nume @cititor.Prenume</li>
                    }
                </ul>
            }
        </form>
    </div>
</div>
