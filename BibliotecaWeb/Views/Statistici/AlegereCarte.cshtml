@model BibliotecaWeb.Models.Statistici.AlegereCarteModel

@{
    ViewData["Title"] = "AlegereCarte";
}

<h2>Alegere Carte</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VizualizareReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4>Cartile disponibile sunt:</h4>
                @{
                for (int i = 0; i < Model.carti.Count(); i++)
                {
                    <input asp-for="@Model.selectedAnswer" value="@Model.carti[i].CarteId" type="radio" />
                    <label asp-for="@Model.carti[i].CarteId">@Model.carti[i].Titlu</label>
                    <br />
                }
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Alege" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

