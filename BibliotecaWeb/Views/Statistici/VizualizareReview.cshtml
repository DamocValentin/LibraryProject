@model BibliotecaWeb.Models.Statistici.VizualizareReviewModel

@{
    ViewData["Title"] = "VizualizareReview";
}

<h2>Vizualizare Review</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @if(Model.reviews.Count() == 0)
        {
            <div>Nu exista review-uri pentru aceasta carte :)</div>
        }
        else
        {
                for (int i = 0; i < Model.reviews.Count(); i++)
                {
                    <div>@Model.reviews[i].Text</div>
                    <br />
                }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Inapoi la statistici</a>
</div>

