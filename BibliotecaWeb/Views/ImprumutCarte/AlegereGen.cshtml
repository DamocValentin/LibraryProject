@model BibliotecaWeb.Models.ImprumutCarte.AlegereGenModel

@{
    ViewData["Title"] = "AlegereGen";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AlegereCarte">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Atentie Sunteti in starea: @Model.stare</h4>
            <div class="form-group">
                @{
                    for (int i = 0; i < Model.genuri.Count(); i++)
                    {
                        <input asp-for="@Model.selectedAnswer" value="@Model.genuri[i].GenId" type="radio" />
                        <label asp-for="@Model.genuri[i].GenId">@Model.genuri[i].Descriere </label>
                        <br />
                    }
                }
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="cititorId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Selectare" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
